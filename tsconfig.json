{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "target": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node", "jest"]
  },
  "types": ["node", "jest", "@testing-library/jest-dom"],
  "exclude": ["node_modules"],
  "include": ["src", "types.d.ts"]
}